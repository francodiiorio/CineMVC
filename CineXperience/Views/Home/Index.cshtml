@model List<Pelicula>
@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="./Imagenes/banner2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./Imagenes/banner1.jpg" class="d-block w-100" alt="...">
        </div>
     
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<section class="section-card d-flex flex-wrap">
    @foreach (var pelicula in Model)
    {
        <div class="card flex-fill mb-3 mr-3" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@pelicula.Nombre</h5>
                <a class="btn btn-primary" asp-controller="Funciones" asp-action="IndexByMovie" asp-route-peliculaId="@pelicula.Id">Funciones</a>
            </div>
        </div>
    }
    
</section>